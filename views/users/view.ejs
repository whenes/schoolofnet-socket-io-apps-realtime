<% include ../layout/header %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h1><%= data.nome %></h1>

    <div class="mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Sobre vocÃª</h2>
      </div>
      <div class="mdl-card__supporting-text">
        <ul class="demo-list-icon mdl-list">
          <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">email</i>
              <%= data.email %>
            </span>
          </li>
          <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">cake</i>
              <%= data.nascimento %>
            </span>
          </li>
          <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
              <i class="material-icons mdl-list__item-icon">phone</i>
              <%= data.celular %>
            </span>
          </li>
        </ul>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a href="/users" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
          <i class="material-icons">arrow_back</i> Voltar
        </a>
        <a href="/users/<%= data.id %>/edit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
          <i class="material-icons">mode_edit</i> Editar
        </a>
        <a href="/users/<%= data.id %>/remove" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" data-nome="<%= data.nome %>" id="user_remove">
          <i class="material-icons">delete_sweep</i> Remover
        </a>
      </div>
      <div class="mdl-card__menu">
        <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
          <i class="material-icons">share</i>
        </button>
      </div>
    </div>
  </div>
</div>
<% include ../layout/footer %>
